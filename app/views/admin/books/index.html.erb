<h4>Livros</h4><br>

<%= link_to("Cadastrar Livro", new_admin_book_path, class: "btn btn-success mb-4") %>

<%= form_tag(admin_books_path, method: :get) do %>
  <div class="row float-sm-end" >
    <div class="col-8">
      <%= text_field_tag(:search, params[:search], class: 'form-control', placeholder: "Pesquisar livro") %>
    </div>
    <div class="col-4">
      <%= submit_tag "Pesquisar", class: 'form-control' %>
    </div>
  </div>
<% end %>

<table class="table table-light">
  <thead>
    <tr>
      <th scope="col">Registro</th>
      <th scope="col">Nome</th>
      <th scope="col">Autor</th>
      <th scope="col">Categoria</th>
      <th scope="col">Criado em</th>
      <th scope="col">Atualizado em</th>
      <th scope="col"></th>
      <th scope="col"></th>

    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.name %></td>
      <td><%= book.author %></td>
      <td><%= book.category %></td>
      <td><%= book.created_at%></td>
      <td><%= book.updated_at%></td>
      <td><%= link_to "Editar", edit_admin_book_path(book), class: "btn btn-warning btn-sm" %></td>
      <td><%= link_to "Deletar", admin_book_path(book), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %></td>
    <% end %>
  </tbody>
</table>
