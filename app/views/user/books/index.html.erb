<h4>Livros</h4><br>

<div class=" d-flex justify-content-center align-items-center">
  <%= render 'search' %>
</div>

<table class="table table-light">
  <thead>
    <tr>
      <th scope="col">Registro</th>
      <th scope="col">Nome</th>
      <th scope="col">Autor</th>
      <th scope="col">Categoria</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.name %></td>
      <td><%= book.author %></td>
      <td><%= book.category %></td>
    <% end %>
  </tbody>
</table>
